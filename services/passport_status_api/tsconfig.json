    "declaration": true,
    "esModuleInterop": true,
    "target": "es2019",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src"
  ]
}